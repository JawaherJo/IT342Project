<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Services"
    android:orientation="vertical"
    android:background="@color/White"
    android:weightSum="10">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <TextView
            android:id="@+id/textGrid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="18dp"
            android:text="كل مايخص الحجز "
            android:textColor="@color/darkgray"
            android:textSize="20sp"
            android:textStyle="bold"/>

    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8.5"
        android:alignmentMode="alignMargins"
        android:columnCount="1"
        android:columnOrderPreserved="false"
        android:padding="0dp"
        android:layout_marginLeft="17dp">


        <android.support.v7.widget.CardView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="1dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="8dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textGrid3"
                    android:layout_width="213dp"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_gravity="center"
                    android:layout_marginRight="2dp"
                    android:layout_marginTop="23dp"
                    android:text=" لطفًا حددي الوقت المناسب :"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:textStyle="bold"/>


                <TextView
                    android:id="@+id/textGrid1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="22dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="76dp"
                    android:text="اليوم :"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/textGrid2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="23dp"
                    android:layout_marginLeft="76dp"
                    android:layout_gravity="center"
                    android:text="الوقت :"
                    android:textColor="@color/textColor"
                    android:textSize="16sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <Button
                android:id="@+id/btnDateTime"
                android:layout_width="115dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="48dp"
                android:layout_marginRight="250dp"
                android:text="عرض التقويم"
                android:textColor="@color/White"
                android:textSize="16sp"
                android:textStyle="bold" />
            <EditText
                android:id="@+id/editText2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="93dp"
                android:layout_marginRight="100dp"
                android:ems="10"
                android:hint="٨:٣٠"
                android:inputType="textPersonName" />

            <TextView
                android:id="@+id/textViewTD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="71dp"
                android:layout_marginRight="105dp"
                android:hint="الموعد المحدد"
                android:textSize="15dp"
                android:textColor="@color/textColor" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">




                <TextView
                    android:id="@+id/serviceTV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="الخدمات المتوفره في مركز التجميل : "
                    android:layout_marginTop="169dp"
                    android:layout_marginRight="7dp"
                    android:textColor="@color/textColor"
                    android:textSize="18sp"
                    android:textStyle="bold"/>

            </LinearLayout>
            <CheckBox
                android:id="@+id/checkBox1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="215dp"
                android:text="استشوار شعر" />

            <CheckBox
                android:id="@+id/checkBox2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="215dp"
                android:layout_marginRight="138dp"
                android:text="قص شعر" />

            <CheckBox
                android:id="@+id/checkBox3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="215dp"
                android:layout_marginRight="255dp"
                android:text="صبغة شعر" />


            <CheckBox
                android:id="@+id/checkBox4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginRight="10dp"
                android:text="معالج شعر" />

            <CheckBox
                android:id="@+id/checkBox5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginRight="138dp"
                android:text=" حمام زيت" />

            <CheckBox
                android:id="@+id/checkBox6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="270dp"
                android:layout_marginRight="255dp"
                android:text="تنظيف بشره" />


            <CheckBox
                android:id="@+id/checkBox7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:layout_marginRight="10dp"
                android:text="شمع" />

            <CheckBox
                android:id="@+id/checkBox8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:layout_marginRight="138dp"
                android:text=" فتله" />

            <CheckBox
                android:id="@+id/checkBox9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="320dp"
                android:layout_marginRight="255dp"
                android:text="بديكير ومنيكير " />


            <CheckBox
                android:id="@+id/checkBox10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp"
                android:layout_marginRight="10dp"
                android:text="تشقير حواجب" />

            <CheckBox
                android:id="@+id/checkBox11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp"
                android:layout_marginRight="138dp"
                android:text="تسريحة شعر" />

            <CheckBox
                android:id="@+id/checkBox12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="370dp"
                android:layout_marginRight="255dp"
                android:text="ميك اب" />



            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp"
                android:layout_marginRight="50dp"
                android:text="حفظ"
                />

            <Button
                android:id="@+id/button2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="430dp"
                android:layout_marginRight="230dp"
                android:text="الغاء"
                />


        </android.support.v7.widget.CardView>



    </GridLayout>

</LinearLayout>
